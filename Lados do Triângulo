#include <stdio.h>

int main()  
{
    int lado1, lado2, lado3;
    
    printf("digite lado 1 do triangulo: ");
    scanf("%d", &lado1);
    printf("\n");
   
    printf("digite lado 2 do triangulo: ");
    scanf("%d", &lado2);
    printf("\n");

    printf("digite lado 3 do triangulo: ");
    scanf("%d", &lado3);
    printf("\n");
    
    if(lado1 == lado2 && lado1 == lado3){
        printf("o triamgulo é Equilátero pois os três lados são iguais");
    }    
    else if(lado1 == lado2 && lado1 != lado3){
        printf("o triangulo é Isósceles pois dois lados são iguais");
    }
    else if(lado1 == lado3 && lado1 != lado2){
        printf("o triangulo é Isósceles pois dois lados são iguais");
    }
    else if(lado2 == lado3 && lado2 != lado1){
        printf("o triangulo é Isósceles pois dois lados são iguais");
    }
    else{
        printf("o triangulo é Escaleno pois os três lados são diferentes");
    } 
    
    return 0;
}
